<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kernel.listener.phpexcel_twig_extension_request_listener.class">MewesK\PhpExcelTwigExtensionBundle\EventListener\RequestListener</parameter>
        <parameter key="phpexcel_twig_extension.phpexcel_extension.class">MewesK\PhpExcelTwigExtensionBundle\Twig\PhpExcelExtension</parameter>
    </parameters>

    <services>
        <service id="kernel.listener.phpexcel_twig_extension_request_listener" class="%kernel.listener.phpexcel_twig_extension_request_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="phpexcel_twig_extension.phpexcel_extension" class="%phpexcel_twig_extension.phpexcel_extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
